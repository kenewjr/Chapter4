<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_margin="20sp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15sp"
        app:cardElevation="5sp"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="5sp"
                android:id="@+id/img_app"
                android:layout_width="100sp"
                android:layout_height="100sp"/>
            <TextView
                android:layout_margin="5sp"
                android:text="aaa"
                android:layout_toRightOf="@+id/img_app"
                android:id="@+id/nama_app"
                android:textSize="20sp"
                android:textColor="@color/teal_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_margin="5sp"
                android:text="aaa"
                android:layout_toRightOf="@id/img_app"
                android:layout_below="@id/nama_app"
                android:id="@+id/dev_app"
                android:textSize="20sp"
                android:textColor="@color/teal_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_margin="5sp"
                android:text="aaa"
                android:layout_toRightOf="@id/dev_app"
                android:layout_below="@id/nama_app"
                android:id="@+id/ctgry"
                android:textSize="20sp"
                android:textColor="@color/teal_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_margin="5sp"
                android:text="aaa"
                android:layout_toRightOf="@id/img_app"
                android:layout_below="@id/dev_app"
                android:id="@+id/rate"
                android:textSize="20sp"
                android:textColor="@color/teal_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_margin="5sp"
                android:text="aaa"
                android:layout_toRightOf="@id/rate"
                android:layout_below="@id/ctgry"
                android:id="@+id/size"
                android:textSize="20sp"
                android:textColor="@color/teal_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_margin="5sp"
                android:text="aaa"
                android:layout_toRightOf="@id/size"
                android:layout_below="@id/ctgry"
                android:id="@+id/jmlh"
                android:textSize="20sp"
                android:textColor="@color/teal_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>